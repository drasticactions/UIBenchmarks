<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UIBenchmarks.MauiUI.PostContentView">
    <Grid Grid.RowDefinitions="Auto, Auto, Auto, Auto" Grid.Column="1">
        <Grid ColumnSpacing="5" ColumnDefinitions="Auto, *, Auto">
            <Label FontAttributes="Bold" Text="{Binding Post.Author.Name}"/>
        </Grid>
        <Grid Grid.Row="1">
            <Label Text="{Binding Post.Text}"/>
        </Grid>
    </Grid>
</ContentView>