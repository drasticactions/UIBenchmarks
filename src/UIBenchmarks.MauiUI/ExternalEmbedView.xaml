<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UIBenchmarks.MauiUI.ExternalEmbedView">
    <Grid x:Name="MainGrid" Margin="5">
        <Border Stroke="{AppThemeBinding Light=Black, Dark=White}"
                Background="Transparent"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 5">
            <Grid RowDefinitions="250, Auto">
                <Image Aspect="AspectFill">
                    <Image.Source>
                        <UriImageSource Uri="{Binding Thumb}" CachingEnabled="True" />
                    </Image.Source>
                </Image>
                <Grid Margin="5" RowDefinitions="Auto, Auto, Auto" Grid.Row="1">
                    <Label MaxLines="2" FontAttributes="Bold" Text="{Binding Title}"/>
                    <Label MaxLines="1" FontSize="Caption" Grid.Row="1" LineBreakMode="TailTruncation" Text="{Binding Uri}"/>
                    <Label MaxLines="2" Grid.Row="2"  Text="{Binding Description}" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</ContentView>