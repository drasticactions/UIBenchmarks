<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vlv="clr-namespace:Microsoft.Maui.Controls;assembly=VirtualListView"
             x:Class="UIBenchmarks.AppMaui.VirtualListViewIncreaseBoxSizePage">
    <ContentPage.Content>
        <vlv:VirtualListView Adapter="{Binding Boxes}">
            <vlv:VirtualListView.ItemTemplate>
                <DataTemplate>
                    <Border HeightRequest="{Binding Height}" Stroke="{AppThemeBinding Light=Black, Dark=White}"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 5">
                        <Label HorizontalOptions="Center" VerticalOptions="Center" Text="{Binding Height}"/>
                    </Border>
                </DataTemplate>
            </vlv:VirtualListView.ItemTemplate>
        </vlv:VirtualListView>
    </ContentPage.Content>
</ContentPage>